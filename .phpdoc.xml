<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="data/xsd/phpdoc.xsd"
>
    <paths>
        <output>.build/phpdoc</output>
        <cache>.build/phpdoc.cache</cache>
    </paths>
    <version number="3.0.0">
        <folder>latest</folder>
        <api>
            <source dsn=".">
                <path>.</path>
            </source>
            <output>private</output>
            <ignore hidden="true" symlinks="true">
                <path>.build/*</path>
                <path>.github/*</path>
                <path>config/*</path>
                <path>plugins/**/*</path>
                <path>themes/**/*</path>
                <path>vendor/*</path>
            </ignore>
            <extensions>
                <extension>php</extension>
                <extension>php.dist</extension>
            </extensions>
            <include-source>true</include-source>
            <default-package-name>Pico</default-package-name>
        </api>
    </version>
    <template name="default"/>
</phpdocumentor>
